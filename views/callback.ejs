<body>
    <div class="container">
        <div class="jumbotron" style="margin-top: 15vh">
            <form action="/result" method="GET">
                <h1 class="display-4">Enter Spotify URI</h1>
                <hr class="my-4">
                <div class="form-group">
                    <label for="input1">Spotify URI <strong>(without "spotify:playlist:"):</strong></label>
                    <input id="input1" class="form-control" name="uri_input" placeholder="303PJ0NAhTgEsVIkNHnjxr">
                    <small class="form-text text-muted">Retriving big playlists could take a while. Please be
                        patient.</small>
                    <small class="form-text text-muted">If you think you've waited far too long, please refresh the
                        page.</small>
                </div>
                <p class="text-danger"><strong>CAUTION!</strong> You will need a Spotify
                    <strong>URI</strong>, not an
                    <strong>URL</strong>!</p>
                <button class="btn btn-primary btn-lg" type="submit">Submit</button>
                <p><small></small></p>
                <p><small></small></p>
            </form>
        </div>
    </div>

    <!-- SCRIPTS -->
